<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <style>

      html, body{
          background-color: #f1f2f6;
          font-family: 'helvetica neue', helvetica, verdana, sans-serif;
          height: 100%;
          font-size: 15px;
          color: #677483;
          font-weight: 300;
      }

      h1, h2, h3, h4, h5, h6{
          margin:0;
          margin-bottom: 5px;
          color: #445359;
          font-weight: normal;
      }


      hr{
          border-top: #66b238 solid 1px;
          border-bottom: none;
      }

      a{
          color: #989898;
          text-decoration: none;
      }

      p{
          color: #362C29;
          font-size: 15px;
          margin: 5px 0;
          font-weight: 300;
          line-height: 22px;
      }

      td{
          color: #677483;
          font-size: 14px;
          font-weight: 300;
      }

      ul{
          padding: 0;
          margin-left: 20px
      }

      img{
          max-width: 100%;
      }

      .gray a{
          background-color: black;
          padding: 13px 18px;
          display: inline-block;
          text-align: center;
          color: white;
          font-size: 16px;
          -webkit-border-radius: 3px;
          -moz-border-radius: 3px;
          border-radius: 3px;
      }

      .content table{
          /*border: #d2d2d2 1px solid;*/
          width: 100%!important;
          border-collapse: collapse;
      }


      /*.content table tr{
        border-top: #d2d2d2 1px solid;
      }*/

      .content table td{
          padding: 10px;
      }

      .content table td p{
          margin: 0;
      }

      .text {
          color: white;
          text-transform: uppercase;
          font-size: 22px
      }

      .eventName {
          color: white;
          font-size: 38px;
          font-weight: bold;
          margin: 10px 0;
      }

      .eventDescription {
          color: white;
          font-size: 19px;
      }

      .pinkText {
          color: #D83181;
          font-weight: 500;
      }

      .graySection {
          background-color: #F7F8F8;
          border-bottom: 1px solid #4D4D4D;
          margin-top: 30px
      }

      .deltaButton {
          margin-top: 10px;
          display: inline-block;
          padding: 12px 20px;
          border-radius: 30px;
          background: linear-gradient(133deg, #FFA31D 0%, #D83181 100%);
          color: white;
          font-size: 15px;
      }

      .deltaButton img {
          margin-right: 10px;
          width: 12px
      }

      .logoImg {
          max-width: 170px;
          padding: 10px;
      }

  </style>
</head>
<body style="font-size: 13px; margin:0;">
<table width="100%" class="wrapper" cellpadding="0" cellspacing="0" border="0" bgcolor="#f1f2f6" style="padding-top: 60px; padding-bottom: 60px;">
  <tbody>
  <tr>
    <td align="center">
      <table width="660" cellpadding="0" cellspacing="0" border="0" bgcolor="white">
        <tbody>
        <!--- header start-->
        <tr>
          <td width="660">
            <table width="660" cellpadding="0" cellspacing="0" border="0">
              <tbody>
              <tr style="background-image:url('{{ 'top_img.png' | asset_path }}');width:660px;height:400px;background-position:center;background-repeat:no-repeat;background-size:cover;">
                <td width="660" height="75" valign="center" align="center" style="padding-bottom: 15px;">
                  <p class="text">{{ 'Du är nu anmäld till' | }}</p>
                  <h1 class="eventName">{{ 'event-title' | t }}</h1>
                  {%comment%} <p class="eventDescription">{{ 'event-description' | t }}</p>{%endcomment%}
                </td>
              </tr>
              </tbody>
            </table>
          </td>
        </tr>
        <!--- header end -->
        <!---booking info start-->
        <tr>
          <td width="640" class="content" style="padding-left: 40px; padding-right: 40px; padding-top: 20px; padding-bottom: 20px;">

            <table width="640" border="0" cellpadding="0" cellspacing="0">
              <tbody>
              <h2 class="pinkText">{{ 'Mina uppgifter' | t }}</h2>
              <tr>
                <td width="220" valign="top" style="padding-left:0">
                  <p><strong>{{ order.bill_address.first_name }} {{ order.bill_address.last_name }}</strong></p>
                  <p>{{ order.bill_address.company }}</p>
                  <p>{{ order.bill_address.phone }}</p>
                </td>

                <td width="420" valign="top" style="padding-right:0">
                  <p><strong>{{ 'Meddelande' | t }}</strong></p>
                  <p>{{ order.special_instructions }}</p>
                </td>
              </tr>
              </tbody>
            </table>

            <table border="0" cellpadding="1" cellspacing="1" style="width: 500px;">
              <tbody>
              <h2 class="pinkText" style="margin-top:20px;border-bottom:1px solid #cbcbcb">{{ 'Mina bokningar' | t }}</h2>
              {% for item in order.order_items %}
                <tr style="border-bottom: 1px solid #cbcbcb">
                  <td valign="top" style="padding-left:0;">
                    <p class="pinkText" style="font-weight:bold;padding: 7px 0;">{{ item.name }}</p>
                  </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </td>
        </tr>

        <tr>
          <td width="660">
            <table width="660" border="0" cellpadding="1" cellspacing="1" style="margin-top:30px">
              <tbody>
              <tr class="graySection">
                <td style="padding:40px;">
                  <h2 class="pinkText" style="margin-bottom:15px">{{ 'För att delta' | t }}</h2>
                  <p style="margin-bottom:20px;">{{ 'delta-text' | t }}</p>
                  <p><strong>{{ 'open-link-text' | t }}</strong></p>
                  <a class="deltaButton" href="https://sammans.se/delta?id={{ order.number }}"><img src="{{ 'arrow-white-right.png' | asset_path }}" alt="Delta" />{{ 'Delta' | t }}</a>
                  <p style="font-size: 16px;">Kan du inte se länken? Klistra in följande i din webbbläsare: <a href="https://sammans.se/delta?id={{ order.number }}" style="color: #D83181; font-weight: bold;">https://sammans.se/delta?id={{ order.number }}</a> </p>
                </td>
              </tr>
              </tbody>
            </table>
          </td>
        </tr>
        <!---booking info end-->

        <!-- logos start -->
        <tr>
          <td width="660">
            <table width="660" cellpadding="0" cellspacing="0" border="0">
              <tbody>
              <tr>
                <td style="padding: 20px 40px 0">
                  <p style="font-size: 13px;color:#4d4d4d;">PROJEKTET DRIVS MED HJÄLP AV</p>
                </td>
              </tr>
              <tr>
                <td style="padding:0 40px 20px;text-align:center;">
                  <img width="120" class="logoImg" src="{{ 'sf-varend.png' | asset_path }}"/>
                  <img width="120" class="logoImg" src="{{ 'sunnerbo.jpg' | asset_path }}"/>
                  <img width="120" class="logoImg" src="{{ 'lansstyrelsen_kronoberg.png' | asset_path }}"/>
                  <img width="120" class="logoImg" src="{{ 'linneuniversitetet.png' | asset_path }}"/>
                  <img width="120" class="logoImg" src="{{ 'vaxjo_kommun.png' | asset_path }}"/>
                  <img width="120" class="logoImg" src="{{ 'region_kronoberg.png' | asset_path }}"/>
                </td>
              </tr>
              </tbody>
            </table>
          </td>
        </tr>
        <!-- logos end -->

        <!--- footer start-->
        <tr>
          <td width="660" bgcolor="#101720">
            <table width="660" cellpadding="0" cellspacing="0" border="0">
              <tbody>
              <tr>
                <td width="330" valign="top" style="padding-left: 40px; padding-right: 40px; padding-top: 40px; padding-bottom: 40px;">
                  <h4 style="margin: 0; color: white; font-size: 18px;">Kontakta oss</h4>
                  <a style="color: white" href="mailto:info@sfvarend.se?cc=info@sunnerbosf.se">Maila oss</a>
                </td>
                {% comment %}
                <td width="330" valign="top" style="padding-left: 40px; padding-right: 40px; padding-top: 40px; padding-bottom: 40px;">
                  <h4 style="margin: 0; color: white; font-size: 18px;">{{ 'Följ oss' | t }}!</h4>
                  <a href=""><img width="25" style="margin-right:3px" src="{{ 'facebook-icon.png' | asset_path }}" alt="facebook icon" /></a>
                  <a href=""><img width="25" style="margin-right:3px" src="{{ 'instagram-icon.png' | asset_path }}" alt="instagram icon" /></a>
                  <a href=""><img width="20" src="{{ 'icon-youtube.png' | asset_path }}" alt="youtube icon" /></a>
                </td>
                {% endcomment %}
              </tr>
              </tbody>
            </table>
          </td>
        </tr>
        <!--- footer end -->
        </tbody>
      </table>
    </td>
  </tr>
  </tbody>
</table>
</body>
</html>