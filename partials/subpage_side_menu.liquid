<div class="d-none d-lg-block col-lg-3 padding-right-lg-xl">
  <nav>
    <div class="padding-y-xl padding-x-lg radius-lg border-full-secondary shadow-sm">
      <ul class="d-flex flex-column row-gap-xs list-unstyled">
        <li class="">
          <a href="{{ page.root_page.url }}"
             class="black-link {% if page.id == page.root_page.id %}active{% endif %}">{{ page.root_page.title }}</a>
        </li>
        {% for child in page.root_page.children %}
          <li class="">
            <a href="{{ child.url }}"
               class="black-link {% if page.id == child.id %}active{% endif %}">{{ child.title }}</a>
          </li>
        {% endfor %}

      </ul>
    </div>
  </nav>
</div>


<div class="col-12 d-flex flex-column row-gap-2xs d-lg-none">
  <p aria-label="Undersidor navigering">{{ "Undersida" | t }}</p>

  <a class="nav-link dropdown-toggle black-link active input-default" href="#" role="button" data-bs-toggle="dropdown"
     aria-expanded="false">
    {{ page.title }}
  </a>
  <ul class="dropdown-menu subpage-nav-dropdown">
    {% unless page.id == page.root_page.id %}
      <li class="dropdown-item">
        <a href="{{ page.root_page.url }}"
           class="black-link">{{ page.root_page.title }}</a>
      </li>
    {% endunless %}
    {% for child in page.root_page.children %}
      {% unless child.id == page.id %}
        <li class="dropdown-item">
          <a href="{{ child.url }}"
             class="black-link">{{ child.title }}</a>
        </li>
      {% endunless %}
    {% endfor %}
  </ul>
</div>

