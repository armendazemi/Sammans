<!-- Private -->
<form class="w-100" id="private-form" action="/w/cart" data-user-form="private">
  <fieldset class="contact-info__inputs row row-gap-sm w-100">
    <legend class="visually-hidden">{{ "Privatperson uppgifter" | t }}</legend>

    <div class="col-12 col-lg-6">
      <label for="email" class="text-md margin-bottom-2xs">{{ "E-postadress" | t }}</label>
      <input type="email" id="email" name="order[email]" class="input-default w-100"
             placeholder="{{ "exempel@mail.se" | t }}"
             required>
    </div>

    <div class="col-12 col-lg-6">
      <label for="city" class="text-md margin-bottom-2xs">{{ "Stad" | t }}</label>
      <input type="text" id="city" name="order[bill_address_attributes][city]" class="input-default w-100"
             placeholder="{{ "Fyll i stad" | t }}" required>
    </div>
  </fieldset>

  <input name="order[bill_address_attributes][address1]" type="text" value="Exempelgatan 2" hidden aria-hidden="true">
  <input name="order[bill_address_attributes][zipcode]" type="text" value="00000" hidden aria-hidden="true">
  <input type="text" name="order[extra_field_1]" value="Privat" hidden>
  <input name="order[bill_address_attributes][country_id]" type="number" value="{{ store.country.id }}" hidden>
  <input name="_method" type="hidden" value="patch">
</form>

<!-- Organization -->
